{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "roscore",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && roscore"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Launch RealSense Camera",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && roslaunch realsense2_camera rs_camera.launch"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Record RealSense ROS Bag",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p . && source /opt/ros/noetic/setup.bash && rosbag record /camera/color/image_raw /camera/depth/image_rect_raw /camera/color/camera_info /camera/depth/camera_info -o realsense_rgbd"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Human Detector Script",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && LD_PRELOAD=/usr/lib/aarch64-linux-gnu/libgomp.so.1 python3 scripts/test.py"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
