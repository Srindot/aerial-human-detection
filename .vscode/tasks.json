{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "roscore",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && roscore"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Launch RealSense Camera",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && roslaunch realsense2_camera rs_camera.launch"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Human Detector Script",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source /opt/ros/noetic/setup.bash && LD_PRELOAD=/usr/lib/aarch64-linux-gnu/libgomp.so.1 python3 src/realsense_human_detector/scripts/test.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}/catkin_make"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
